{
  "name": "@parcel/monorepo",
  "description": "Blazing fast, zero configuration web application bundler",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/parcel-bundler/parcel.git"
  },
  "private": true,
  "workspaces": [
    "packages/*/*"
  ],
  "scripts": {
    "build": "lerna run build --stream",
    "test": "lerna run test --stream",
    "test-ci": "lerna run test-ci --stream",
    "coverage": "nyc --reporter=cobertura  --reporter=text-summary yarn test",
    "lint": "eslint . && prettier \"./packages/*/*/{src,bin,test}/**/*.{js,json,md}\" --list-different",
    "format": "prettier --write \"./packages/*/*/{src,bin,test}/**/*.{js,json,md}\"",
    "precommit": "lint-staged",
    "clean-test": "rimraf packages/core/integration-tests/.parcel-cache && rimraf packages/core/integration-tests/dist",
    "clean": "yarn clean-test && lerna clean --yes && lerna exec -- rm -rf ./lib && yarn",
    "postinstall": "yarn build"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "flow-bin": "0.98.1",
    "lerna": "^3.3.2",
    "lint-staged": "^7.2.2",
    "mocha": "^6.1.3",
    "mocha-junit-reporter": "^1.21.0",
    "mocha-multi-reporters": "^1.1.7",
    "nyc": "^14.1.1",
    "prettier": "1.17.1",
    "sinon": "^7.3.1"
  },
  "engines": {
    "node": ">= 8.0.0"
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/parcel"
  }
}
